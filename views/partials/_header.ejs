<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav col">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <div class="navbar-login col text-right">
        <div class="form-group">
          <form method="POST" action="<%= user ? '/logout' : '/login' %>">
            <% if (user){%>
            <span>Logged in as: <%= user.email %></span>
            <button type="submit" class="btn btn-outline-dark">Logout</button>
            <% } else { %>
            <a href="/register">Register</a>
            <a href="/login">Log In</a>
            <% } %>
          </form>
        </div>
      </div>
    </div>
  </nav>
</header>
